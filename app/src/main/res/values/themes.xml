<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/base_white</item>
        <item name="android:colorBackground">@color/base_white</item>
        <item name="android:textColor">@color/base_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/base_white</item>
        <item name="android:navigationBarColor">@color/base_white</item>
        <item name="android:windowBackground">@color/base_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog</item>
    </style>

    <style name="Theme.AppTheme.Capture">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/accent_blue</item>
        <item name="itemTextAppearance">@style/Text.Footnote</item>
        <item name="itemTextColor">@color/accent_blue</item>
    </style>

    <style name="AppDialogTitleStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/Text.Bold.H3</item>
        <item name="android:textColor">@color/base_black</item>
    </style>

    <style name="AppDialogTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textAppearance">@style/Text.Body1</item>
        <item name="android:textColor">@color/base_black</item>
    </style>

    <style name="AppDialogButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:textAppearance">@style/Text.Bold.Body2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppMaterialDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/AppDialogTextStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AppDialogTitleStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppDialogButton</item>
        <item name="android:windowBackground">@color/base_white</item>
    </style>

    <style name="AppMaterialDialog.FullScreen">
        <item name="android:windowBackground">@color/base_white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/base_white</item>
        <item name="android:navigationBarColor">@color/base_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppMaterialDialog.FullScreen.Progress">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15" parent="">
        <item name="cornerSize">15dp</item>
    </style>
</resources>
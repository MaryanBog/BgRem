<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/selector_button_color</item>
        <item name="android:textColor">@color/base_white</item>
        <item name="android:textAppearance">@style/Text.Bold.H3</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="AppButton.Toggle">
        <item name="android:backgroundTint">@color/selector_button_toggle_color</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:textAppearance">@style/Text.H2</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/selector_button_toggle_stroke_color</item>
        <item name="iconPadding">2dp</item>
        <item name="iconGravity">top</item>
        <item name="textAllCaps">false</item>
        <item name="android:checkable">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:minHeight">98dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="AppButton.White">
        <item name="android:backgroundTint">@color/selector_button_white_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Text.Bold.Body4</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="cornerRadius">27dp</item>
    </style>

</resources>